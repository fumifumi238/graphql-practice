schema {
  query: Query
  mutation: Mutation
}

type Query {
  ping: Ping!
  todos: [Todo!]!
}

type Mutation {
  setMessage(message: String!): Ping!
  addTodo(title: String!): Todo!
  toggleTodo(id: ID!): Todo!
  deleteTodo(id: ID!): ID!
}

type Ping {
  message: String!
}

type Todo {
  id: ID!
  title: String!
  completed: Boolean!
}

enum TodoEventType {
  ADDED
  UPDATED
  DELETED
}

type TodoEvent {
  type: TodoEventType!
  todo: Todo!
}

type Subscription {
  todoEvent: TodoEvent!
}
